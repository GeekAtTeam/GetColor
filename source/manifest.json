{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0.1",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GetColor - Pick a color",
    "default_icon": {
      "16": "icons/getcolor-icon-16px.png",
      "32": "icons/getcolor-icon-32px.png",
      "48": "icons/getcolor-icon-48px.png",
      "128": "icons/getcolor-icon-128px.png"
    }
  },
  "icons": {
    "16": "icons/getcolor-icon-16px.png",
    "32": "icons/getcolor-icon-32px.png",
    "48": "icons/getcolor-icon-48px.png",
    "128": "icons/getcolor-icon-128px.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "homepage_url": "https://github.com/GeekAtTeam/GetColor"
}
